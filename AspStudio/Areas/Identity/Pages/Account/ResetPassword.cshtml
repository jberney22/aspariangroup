<!-- BEGIN login -->
<div class="login" style="background-color:white;">
	<!-- BEGIN login-content -->
	<div class="login-content">
    <form id="account" method="post">
         <input asp-for="Input.Code" type="hidden" />
			<h1 class="text-center">Reset your password</h1>
			
            <div asp-validation-summary="All" class="text-danger"></div>
			<div class="mb-3">
				<label class="form-label" asp-for="Input.Email"></label>
				<input asp-for="Input.Email" class="form-control form-control-lg fs-15px" placeholder="username@address.com" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<div class="d-flex">
					<label asp-for="Input.Password" class="form-label">Password</label>
				</div>
				<input asp-for="Input.Password" class="form-control form-control-lg fs-15px"  placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
            <div class="mb-3">
				<div class="d-flex">
					<label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
				</div>
				<input asp-for="Input.ConfirmPassword" class="form-control form-control-lg fs-15px"  placeholder="Enter your password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			
			<button type="submit" class="btn btn-primary">Reset</button>
			@*<div class="text-center text-muted">
				Don't have an account yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>.
			</div>*@
		</form>
	</div>
	<!-- END login-content -->
</div>
