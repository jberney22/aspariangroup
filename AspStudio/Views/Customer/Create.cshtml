@model EagleApp.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<style>
    input.input-validation-error {
        border-color: red;
    }

    select.input-validation-error {
        border-color: red;
    }

    .required {
        color: red;
        font-weight: 500;
    }
</style>
<h4> Create Customer</h4>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>
<form asp-action="Create">
    <div class="container">
        <!-- BEGIN row -->
        <div class="row justify-content-center">
            <!-- BEGIN col-10 -->
            <div class="col-xl-10">
                <!-- BEGIN row -->
                <div class="row">
                    <!-- BEGIN col-9 -->
                    <div class="col-xl-9" style="background-color: #fff; padding: 30px;">

                        <div id="formControls" class="mb-5">
                            <div class="card">
                                <div class="card-body pb-2">

                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="CustomerName" class="control-label">Customer Name <span class="required">*</span></label>
                                                <input asp-for="CustomerName" class="form-control" />
                                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                                                
                                            </div>

                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="CustomerClass" class="control-label">Customer Class <span class="required">*</span></label>
                                                <input asp-for="CustomerClass" class="form-control" />
                                                <span asp-validation-for="CustomerClass" class="text-danger"></span>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="Country" class="control-label">Country <span class="required">*</span></label>
                                                @*<input asp-for="Country" class="form-control" />*@
                                                <select class="form-control" id="exampleFormControlSelect1" asp-for="Country">
                                                    <option value="US" selected>United States</option>

                                                </select>
                                                <span asp-validation-for="Country" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="City" class="control-label">City <span class="required">*</span></label>
                                                <input asp-for="City" class="form-control" />
                                                <span asp-validation-for="City" class="text-danger"></span>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="Currency" class="control-label">Currency <span class="required">*</span></label>
                                                @*<input asp-for="Currency" class="form-control" />*@
                                                <select class="form-control" id="exampleFormControlSelect1" asp-for="Currency">
                                                    <option value="USD" selected>United States Dollars</option>

                                                </select>
                                                <span asp-validation-for="Currency" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="Terms" class="control-label">Terms <span class="required">*</span></label>
                                                <input asp-for="Terms" class="form-control" />
                                                <span asp-validation-for="Terms" class="text-danger"></span>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="Status" class="control-label">Status <span class="required">*</span></label>
                                                @*<input asp-for="Status" class="form-control" />*@
                                                <select class="form-control" id="exampleFormControlSelect1" asp-for="Status">
                                                    <option value="" selected>-- Select --</option>
                                                    <option value="Active">Active</option>
                                                    <option value="NotActive">Not Active</option>
                                                </select>
                                                <span asp-validation-for="Status" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group mb-3">
                                                <label asp-for="City" class="control-label">City <span class="required">*</span></label>
                                                <input asp-for="City" class="form-control" />
                                                <span asp-validation-for="City" class="text-danger"></span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <div class="form-group mb-3" style="text-align: center">
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



        

        

